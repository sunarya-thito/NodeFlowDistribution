<NodeFlow>
    <Components>
        <ImagePane>thito.nodeflow.library.ui.ImagePane</ImagePane>
    </Components>
    <Layout>
        <VBox class="project-box-root">
            <StackPane id="project-icon-area">
                <ImagePane id="project-icon"></ImagePane>
                <BorderPane id="project-icon-overlay">
                    <Center>
                        <ImageView>rsrc:Themes/Dark/Icons/PlayButton.png</ImageView>
                    </Center>
                </BorderPane>
            </StackPane>
            <VBox class="project-box-content">
                <BorderPane class="project-identity">
                    <Center>
                        <Label BorderPane.alignment="CENTER_LEFT" id="project-name">Project Name</Label>
                    </Center>
                    <Right>
                        <Button id="options"/>
                    </Right>
                </BorderPane>
                <FlowPane id="tags"></FlowPane>
                <Label VBox.grow="ALWAYS" id="description">Sample description</Label>
                <HBox class="project-box-footer">
                    <Label id="size">60kB</Label>
                </HBox>
            </VBox>
        </VBox>
    </Layout>
</NodeFlow>