<NodeFlow>
    <components>
        <VBox>javafx.scene.layout.VBox</VBox>
        <ScrollPane>thito.nodeflow.library.ui.ModernScrollPane</ScrollPane>
        <Borderpane>javafx.scene.layout.BorderPane</Borderpane>
        <ImageView>javafx.scene.image.ImageView</ImageView>
        <HBox>javafx.scene.layout.HBox</HBox>
        <Label>javafx.scene.control.Label</Label>
        <ComboBox>javafx.scene.control.ComboBox</ComboBox>
    </components>
    <layout>
        <ScrollPane class="config-file-scroll">
            <VBox>
                <HBox class="config-file-header">
                    <Label class="config-file-header-text">Record</Label>
                </HBox>
                <VBox id="list" class="config-file-list">
                </VBox>
                <BorderPane id="add-button" class="config-file-add-button">
                    <HBox BorderPane.position="center" BorderPane.alignment="center" class="config-file-add-container">
                        <Label class="config-file-add-text">${add-variable}</Label>
                        <ImageView class="config-file-add-icon">!create-button</ImageView>
                    </HBox>
                </BorderPane>
            </VBox>
        </ScrollPane>
    </layout>
</NodeFlow>