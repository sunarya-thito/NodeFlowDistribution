<NodeFlow>
    <components>
        <BorderPane>javafx.scene.layout.BorderPane</BorderPane>
        <ImageView>javafx.scene.image.ImageView</ImageView>
        <Label>javafx.scene.control.Label</Label>
        <VBox>javafx.scene.layout.VBox</VBox>
        <TextArea>javafx.scene.control.TextArea</TextArea>
        <FlowPane>javafx.scene.layout.FlowPane</FlowPane>
        <JFXButton>com.jfoenix.controls.JFXButton</JFXButton>
    </components>
    <layout>
        <BorderPane class="error-root">
            <ImageView BorderPane.position="left" class="error-icon">!info_danger</ImageView>
            <VBox class="error-content" BorderPane.position="center">
                <Label id="title" class="error-title"></Label>
                <TextArea id="msg" class="error-message"></TextArea>
            </VBox>
            <FlowPane class="error-buttons" BorderPane.position="bottom">
                <JFXButton id="proceed" class="error-button danger-button">${error-button-proceed}</JFXButton>
                <JFXButton id="log" class="error-button">${error-button-log}</JFXButton>
                <JFXButton id="copy" class="error-button">${error-button-copy-stacktrace}</JFXButton>
            </FlowPane>
        </BorderPane>
    </layout>
</NodeFlow>