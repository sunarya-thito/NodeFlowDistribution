<NodeFlow>
    <components>
        <TextArea>javafx.scene.control.TextArea</TextArea>
        <BorderPane>javafx.scene.layout.BorderPane</BorderPane>
        <Label>javafx.scene.control.Label</Label>
        <VBox>javafx.scene.layout.VBox</VBox>
    </components>
    <layout>
        <BorderPane class="text-dialog-content-root">
            <VBox BorderPane.position="top">
                <Label class="text-dialog-content-title">${mark-error}</Label>
                <Label class="text-dialog-content-message">${mark-error-msg}</Label>
            </VBox>
            <TextArea BorderPane.position="center" id="text" class="text-dialog-content mark-debug-text"></TextArea>
        </BorderPane>
    </layout>
</NodeFlow>