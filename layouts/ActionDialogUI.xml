<NodeFlow>
    <components>
        <ImageView>javafx.scene.image.ImageView</ImageView>
        <Label>javafx.scene.control.Label</Label>
        <BorderPane>javafx.scene.layout.BorderPane</BorderPane>
        <JFXRippler>com.jfoenix.controls.JFXRippler</JFXRippler>
    </components>
    <layout>
        <JFXRippler class="action-dialog-rippler" clip-arc="10">
            <BorderPane class="action-dialog">
                <ImageView BorderPane.position="center" id="icon" class="action-dialog-image"></ImageView>
                <Label id="label" BorderPane.position="bottom" HBox.hgrow="always" class="action-dialog-text"></Label>
            </BorderPane>
        </JFXRippler>
    </layout>
</NodeFlow>