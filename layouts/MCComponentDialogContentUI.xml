<NodeFlow>
    <components>
        <ChatComponentArea>thito.nodeflow.minecraft.chat.ChatComponentArea</ChatComponentArea>
        <BorderPane>javafx.scene.layout.BorderPane</BorderPane>
        <Label>javafx.scene.control.Label</Label>
    </components>
    <layout>
        <BorderPane class="text-dialog-content-root">
            <Label BorderPane.position="top" class="text-dialog-content-title">${edit-text}</Label>
            <ChatComponentArea BorderPane.position="center" id="text" class="text-dialog-content component-dialog-content"></ChatComponentArea>
        </BorderPane>
    </layout>
</NodeFlow>