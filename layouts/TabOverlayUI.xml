<NodeFlow>
    <components>
        <FlowPane>javafx.scene.layout.FlowPane</FlowPane>
        <VBox>javafx.scene.layout.VBox</VBox>
        <Spinner>thito.nodeflow.library.ui.BetterSpinner</Spinner>
        <Label>javafx.scene.control.Label</Label>
    </components>
    <layout>
        <FlowPane class="overlay-root">
            <VBox class="overlay-box">
                <Spinner class="overlay-spinner"/>
                <Label class="overlay-text">${loading}</Label>
            </VBox>
        </FlowPane>
    </layout>
</NodeFlow>